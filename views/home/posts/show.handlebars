          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{post.date}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" style="height:300px;width:900px;" src="{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
