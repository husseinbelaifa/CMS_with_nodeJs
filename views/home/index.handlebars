 <div class="row">



        <!-- Blog Entries Column -->
        <div class="col-md-8">
            {{>home/form-msg}}
          <h1 class="my-4">Page Heading 
            <small>Secondary Text</small>
          </h1>

          <!-- Blog Post -->
          {{#each posts}}

           <div class="card mb-4">
            <img class="card-img-top" height="300px" src="{{file}}" alt="Card image cap">
            <div class="card-body">
              <h2 class="card-title">{{title}}</h2>
              <p class="card-text">{{body}}</p>
              <a href="/posts/{{id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
              Posted on {{date}} by
              <a href="#">{{user.firstName}} {{user.lastName}}</a>
            </div>
          </div>

          {{/each}}
         

    

          <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
             {{#if prevPage}}
              <li class="page-item">
            {{else}}
              <li class="page-item disabled">
            {{/if}}

            {{#if params}}
              <a class="page-link" href="{{url}}&page={{prevPage}}">&larr; Previous</a>
            {{else}}
                  <a class="page-link" href="{{url}}?page={{prevPage}}">&larr; Previous</a>
            {{/if}}
            </li>
            {{#if nextPage}}
              <li class="page-item">
            {{else}}
              <li class="page-item disabled">
            {{/if}}

             {{#if params}}
<a class="page-link" href="{{url}}&page={{nextPage}}">Next &rarr;</a> 
             {{else}}

             <a class="page-link" href="{{url}}?page={{nextPage}}">Next &rarr;</a> 

             {{/if}}
           
              
            </li>
          </ul>

        </div>

        <!-- Sidebar Widgets Column -->
